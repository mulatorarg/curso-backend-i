<h1>{{ titulo }}</h1>
<hr>

<div class="row">
  <div class="col-8">
    <h2>Agregar/Editar Producto</h2>
    <form id="formProducto" class="p-2 border border-info was-validated">
      <div class="row">
        <div class="col-4">
          <label for="producto_id">Id</label>
          <input type="number" class="form-control form-control-sm" id="producto_id" name="producto_id" placeholder="El ID del producto" required>
        </div>
        <div class="col-8">
          <label for="producto_nombre">Nombre</label>
          <input type="text" class="form-control form-control-sm" id="producto_nombre" name="producto_nombre" placeholder="El NOMBRE del producto" required>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col">
          <label for="producto_categoria">Categor√≠a</label>
          <input type="text" class="form-control form-control-sm" id="producto_categoria" name="producto_categoria" placeholder="La CATEGORIA del producto" required>
        </div>
        <div class="col">
          <label for="producto_precio">Precio</label>
          <input type="number" class="form-control form-control-sm" id="producto_precio" name="producto_precio" placeholder="El PRECIO del producto" required>
        </div>
        <div class="col">
          <label for="producto_stock">Stock</label>
          <input type="number" class="form-control form-control-sm" id="producto_stock" name="producto_stock" placeholder="El STOCK actual del producto" required>
        </div>
      </div>
      <button id="btnGuardarProducto" type="button" class="mt-3 btn btn-sm btn-success">Guardar</button>
    </form>
  </div>

  <div class="col-4">
    <h2>Eliminar un producto</h2>
    <form id="formEliminarProducto" class="p-2 border border-info was-validated">
      <div class="form-group">
        <label for="productIdDelete">Id del Producto</label>
        <input type="text" class="form-control form-control-sm" id="productIdDelete" placeholder="escriba el id del producto" required>
      </div>
      <div class="form-group mt-3">
        <button id="btnBorrarProducto" type="button" class="btn btn-sm btn-danger">Borrar</button>
      </div>
    </form>

  </div>
</div>

<hr>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-2">
  {{#each productos}}
  <div class="col">
    <div class="card shadow-sm">
      <img src="../img/productos/{{ thumbnails.[0] }}" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text">{{ nombre }} <br> {{ descripcion }}</p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-info">Ver</button>
            <button type="button" class="btn btn-sm btn-success">Comprar</button>
          </div>
          <small class="text-body-secondary">$ {{ precio }}</small>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
